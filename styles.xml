<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Custom text appearance -->
    <style name="baby_Name" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:fontFamily">@font/airconditioner</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="message" parent="@android:style/TextAppearance">
        <item name="android:textColor">#80DEEA</item>
        <item name="android:textSize">45sp</item>
    </style>

</resources>

